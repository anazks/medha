  </ul>
  
  <div class="sidebar-actions">
    {{#if user}}
      <a href="/users/myorders" class="sidebar-icon-link">
        <i class="fas fa-shopping-bag"></i> My Orders
      </a>
      <a href="/users/userProfile" class="sidebar-icon-link">
        <i class="fas fa-user"></i> Profile
      </a>
