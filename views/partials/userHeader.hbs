<aside class="sidebar">
  <div class="sidebar-header">
    <a href="/" class="sidebar-logo">
      <img src="/images/news/logo.jpg" style="width: 80px;height:50px" alt="">
    </a>
    <button class="sidebar-close">
      <i class="fas fa-times"></i>
    </button>
  </div>
  
  <ul class="sidebar-links">
    <li><a href="/" class="sidebar-link">Home</a></li>
    <li><a href="#products" class="sidebar-link">Shop</a></li>
    <li><a href="#collections" class="sidebar-link">Collections</a></li>
