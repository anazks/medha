<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Confirmed</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: hidden;
        }

        .container {
            text-align: center;
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            padding: 3rem 2rem;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            max-width: 500px;
            width: 90%;
            position: relative;
            overflow: hidden;
        }

        .container::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
            animation: shimmer 2s infinite;
        }

        @keyframes shimmer {
            0% { left: -100%; }
            100% { left: 100%; }
        }

        .checkmark-container {
            margin-bottom: 2rem;
            position: relative;
        }

        .checkmark {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: linear-gradient(45deg, #4CAF50, #45a049);
            margin: 0 auto;
            position: relative;
            transform: scale(0);
            animation: popIn 0.6s ease-out 0.5s forwards;
            box-shadow: 0 10px 30px rgba(76, 175, 80, 0.3);
        }

        .checkmark::after {
            content: 'âœ“';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            font-size: 2.5rem;
            font-weight: bold;
            opacity: 0;
            animation: fadeIn 0.3s ease-out 1.1s forwards;
        }

        @keyframes popIn {
            0% { transform: scale(0) rotate(180deg); }
            100% { transform: scale(1) rotate(0deg); }
        }

        @keyframes fadeIn {
            to { opacity: 1; }
        }

        .title {
            font-size: 2.5rem;
            font-weight: bold;
            color: #2c3e50;
            margin-bottom: 1rem;
            opacity: 0;
            transform: translateY(30px);
            animation: slideUp 0.8s ease-out 1.4s forwards;
        }

        .subtitle {
            font-size: 1.2rem;
            color: #7f8c8d;
            margin-bottom: 2rem;
            opacity: 0;
            transform: translateY(30px);
            animation: slideUp 0.8s ease-out 1.6s forwards;
        }

        @keyframes slideUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .order-details {
            background: rgba(102, 126, 234, 0.1);
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 2rem;
            opacity: 0;
            transform: translateY(30px);
            animation: slideUp 0.8s ease-out 1.8s forwards;
        }

        .order-number {
            font-size: 1.1rem;
            color: #667eea;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .delivery-info {
            color: #555;
            font-size: 1rem;
        }

        .countdown-container {
            opacity: 0;
            animation: fadeIn 0.5s ease-out 2s forwards;
        }

        .countdown-text {
            font-size: 1rem;
            color: #7f8c8d;
            margin-bottom: 1rem;
        }

        .countdown-bar {
            width: 100%;
            height: 6px;
            background: rgba(0, 0, 0, 0.1);
            border-radius: 3px;
            overflow: hidden;
            margin-bottom: 1rem;
        }

        .countdown-progress {
            height: 100%;
            background: linear-gradient(90deg, #667eea, #764ba2);
            border-radius: 3px;
            width: 100%;
            animation: countdown 10s linear forwards;
        }

        @keyframes countdown {
            from { width: 100%; }
            to { width: 0%; }
        }

        .countdown-number {
            font-size: 2rem;
            font-weight: bold;
            color: #667eea;
            margin-bottom: 0.5rem;
        }

        .floating-icons {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            overflow: hidden;
        }

        .floating-icon {
            position: absolute;
            opacity: 0.6;
            animation: float 3s infinite ease-in-out;
        }

        .floating-icon:nth-child(1) {
            top: 20%;
            left: 10%;
            animation-delay: 0s;
            font-size: 1.5rem;
        }

        .floating-icon:nth-child(2) {
            top: 70%;
            right: 15%;
            animation-delay: 1s;
            font-size: 1.2rem;
        }

        .floating-icon:nth-child(3) {
            top: 40%;
            left: 85%;
            animation-delay: 2s;
            font-size: 1.3rem;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(10deg); }
        }

        .redirect-info {
            font-size: 0.9rem;
            color: #95a5a6;
            margin-top: 1rem;
        }

        /* Pulse animation for the entire container */
        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.02); }
            100% { transform: scale(1); }
        }

        .container.success {
            animation: pulse 2s ease-in-out infinite;
        }
    </style>
</head>
<body>
    <div class="container" id="container">
        <div class="floating-icons">
            <div class="floating-icon">ðŸŽ‰</div>
            <div class="floating-icon">ðŸ“¦</div>
            <div class="floating-icon">âœ¨</div>
        </div>

        <div class="checkmark-container">
            <div class="checkmark"></div>
        </div>

        <h1 class="title">Order Confirmed!</h1>
        <p class="subtitle">Your order is confirmed and on the way</p>

        <div class="order-details">
            <div class="order-number">Order #ORD-2025-<span id="orderNumber"></span></div>
            <div class="delivery-info">Estimated delivery: 3-5 business days</div>
        </div>

        <div class="countdown-container">
            <p class="countdown-text">Redirecting to your orders in:</p>
            <div class="countdown-bar">
                <div class="countdown-progress"></div>
            </div>
            <div class="countdown-number" id="countdown">10</div>
            <p class="redirect-info">You will be automatically redirected to /myorders</p>
        </div>
    </div>

    <script>
        // Generate random order number
        document.getElementById('orderNumber').textContent = Math.floor(Math.random() * 10000).toString().padStart(4, '0');

        // Add success pulse animation after initial animations
        setTimeout(() => {
            document.getElementById('container').classList.add('success');
        }, 2500);

        // Countdown timer
        let timeLeft = 10;
        const countdownElement = document.getElementById('countdown');
        
        const timer = setInterval(() => {
            timeLeft--;
            countdownElement.textContent = timeLeft;
            
            if (timeLeft <= 0) {
                clearInterval(timer);
                // Redirect to /myorders
                window.location.href = '/myorders';
            }
        }, 1000);

        // Fallback redirect in case timer fails
        setTimeout(() => {
            window.location.href = '/myorders';
        }, 10000);
    </script>
</body>
</html>