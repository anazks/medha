<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shopping Cart | Elegance</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Space+Grotesk:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <style>
    :root {
      --primary-black: #111112;
      --secondary-black: #1e1e20;
      --tertiary-black: #2a2a2d;
      --pure-white: #ffffff;
      --off-white: #f9f9f9;
      --light-gray: #f0f0f0;
      --medium-gray: #a0a0a0;
      --dark-gray: #555555;
      --border-color: #ebebeb;
      --accent-color: #3a86ff;
      --accent-hover: #2667cc;
      --success-color: #4bb543;
      --error-color: #ff4757;
      --shadow-light: 0 2px 12px rgba(0, 0, 0, 0.06);
      --shadow-medium: 0 4px 20px rgba(0, 0, 0, 0.1);
      --shadow-heavy: 0 8px 32px rgba(0, 0, 0, 0.12);
      --shadow-modal: 0 20px 60px rgba(0, 0, 0, 0.15);
      --transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
      --border-radius: 12px;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background-color: var(--off-white);
      color: var(--primary-black);
      line-height: 1.6;
      font-weight: 400;
      -webkit-font-smoothing: antialiased;
    }

    .container {
      max-width: 1280px;
      margin: 0 auto;
      padding: 40px 24px;
    }

    /* Header */
    .page-header {
      margin-bottom: 40px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .page-title {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 2.25rem;
      font-weight: 700;
      color: var(--primary-black);
      position: relative;
      display: inline-block;
    }

    .page-title::after {
      content: '';
      position: absolute;
      bottom: -8px;
      left: 0;
      width: 60px;
      height: 4px;
      background: var(--accent-color);
      border-radius: 2px;
    }

    .cart-count {
      font-size: 1rem;
      font-weight: 500;
      color: var(--dark-gray);
      margin-left: 12px;
    }

    /* Cart Section */
    .cart-section {
      margin-bottom: 80px;
    }

    .cart-container {
      display: grid;
      grid-template-columns: 1fr 380px;
      gap: 32px;
      align-items: start;
    }

    /* Cart Items */
    .cart-items-container {
      background: var(--pure-white);
      border-radius: var(--border-radius);
      box-shadow: var(--shadow-light);
    }

    .cart-items {
      display: flex;
      flex-direction: column;
      gap: 20px;
      padding: 24px;
    }

    .cart-item {
      background: var(--pure-white);
      border: 1px solid var(--border-color);
      border-radius: var(--border-radius);
      padding: 20px;
      position: relative;
      transition: var(--transition);
      overflow: hidden;
    }

    .cart-item:hover {
      border-color: var(--accent-color);
      box-shadow: var(--shadow-medium);
      transform: translateY(-2px);
    }

    .item-badge {
      position: absolute;
      top: 12px;
      right: -28px;
      background: var(--accent-color);
      color: var(--pure-white);
      padding: 4px 32px;
      font-size: 0.75rem;
      font-weight: 600;
      letter-spacing: 0.5px;
      text-transform: uppercase;
      transform: rotate(45deg);
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .cart-item {
      display: grid;
      grid-template-columns: 100px 1fr;
      gap: 20px;
      align-items: center;
    }

    .item-image {
      width: 100px;
      height: 100px;
      border-radius: 8px;
      overflow: hidden;
      background: var(--off-white);
      border: 1px solid var(--border-color);
      position: relative;
    }

    .item-image img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: var(--transition);
    }

    .item-image:hover img {
      transform: scale(1.05);
    }

    .item-details {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .item-header {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      gap: 16px;
    }

    .item-name {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 1.1rem;
      font-weight: 600;
      color: var(--primary-black);
      margin: 0;
      line-height: 1.4;
    }

    .item-price {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--primary-black);
      white-space: nowrap;
    }

    .item-category {
      color: var(--dark-gray);
      font-size: 0.85rem;
      font-weight: 500;
      margin: 0;
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .item-category i {
      color: var(--medium-gray);
      font-size: 0.9rem;
    }

    .item-meta {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 8px;
    }

    .item-quantity {
      display: flex;
      align-items: center;
      gap: 12px;
      font-weight: 500;
      font-size: 0.9rem;
    }

    .quantity-control {
      display: flex;
      align-items: center;
      border: 1px solid var(--border-color);
      border-radius: 8px;
      overflow: hidden;
      background: var(--off-white);
    }

    .quantity-btn {
      background: var(--pure-white);
      border: none;
      padding: 8px 12px;
      cursor: pointer;
      transition: var(--transition);
      color: var(--dark-gray);
      font-size: 0.8rem;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .quantity-btn:hover {
      background: var(--accent-color);
      color: var(--pure-white);
    }

    .quantity-input {
      border: none;
      text-align: center;
      width: 36px;
      padding: 8px;
      font-weight: 600;
      background: transparent;
      color: var(--primary-black);
      font-size: 0.9rem;
    }

    .item-actions {
      display: flex;
      gap: 10px;
    }

    .action-btns {
      padding: 10px 16px;
      border-radius: 8px;
      text-decoration: none;
      font-weight: 600;
      font-size: 0.85rem;
      transition: var(--transition);
      display: inline-flex;
      align-items: center;
      gap: 6px;
      border: 1px solid transparent;
      cursor: pointer;
    }

    .btn-primary {
      background: var(--accent-color);
      color: var(--pure-white);
      border-color: var(--accent-color);
    }

    .btn-primary:hover {
      background: var(--accent-hover);
      transform: translateY(-1px);
      box-shadow: var(--shadow-light);
    }

    .btn-outline {
      background: var(--pure-white);
      color: var(--dark-gray);
      border-color: var(--border-color);
    }

    .btn-outline:hover {
      background: var(--light-gray);
      color: var(--primary-black);
    }

    /* Cart Summary */
    .cart-summary-container {
      position: sticky;
      top: 40px;
    }

    .cart-summary {
      background: var(--pure-white);
      border: 1px solid var(--border-color);
      border-radius: var(--border-radius);
      padding: 28px;
      box-shadow: var(--shadow-light);
    }

    .summary-title {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 1.4rem;
      font-weight: 700;
      color: var(--primary-black);
      margin-bottom: 20px;
      display: flex;
      align-items: center;
      gap: 10px;
      padding-bottom: 12px;
      border-bottom: 1px solid var(--border-color);
    }

    .summary-title i {
      color: var(--accent-color);
    }

    .price-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 0;
      font-size: 0.95rem;
    }

    .price-label {
      color: var(--dark-gray);
    }

    .price-value {
      font-weight: 500;
    }

    .price-mrp .price-value {
      color: var(--medium-gray);
      text-decoration: line-through;
    }

    .price-saved .price-value {
      color: var(--success-color);
      font-weight: 600;
    }

    .price-total {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 1.2rem;
      font-weight: 700;
      color: var(--primary-black);
      border-top: 2px solid var(--border-color);
      margin-top: 16px;
      padding-top: 16px;
    }

    .checkout-btns {
      width: 100%;
      padding: 14px;
      margin-top: 20px;
      font-size: 1rem;
      font-weight: 600;
      text-align: center;
      letter-spacing: 0.5px;
      border-radius: 8px;
    }

    .payment-methods {
      display: flex;
      gap: 8px;
      margin-top: 16px;
      flex-wrap: wrap;
    }

    .payment-method {
      width: 40px;
      height: 24px;
      border-radius: 4px;
      overflow: hidden;
      background: var(--light-gray);
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 0.7rem;
      color: var(--dark-gray);
    }

    /* COD Modal Styles */
    .modal-overlay {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.6);
      backdrop-filter: blur(8px);
      display: flex;
      align-items: center;
      justify-content: center;
      z-index: 1000;
      opacity: 0;
      visibility: hidden;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .modal-overlay.active {
      opacity: 1;
      visibility: visible;
    }

    .cod-modal {
      background: var(--pure-white);
      border-radius: 20px;
      padding: 0;
      max-width: 480px;
      width: 90%;
      max-height: 90vh;
      overflow: auto;
      box-shadow: var(--shadow-modal);
      transform: scale(0.9) translateY(20px);
      transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
    }

    .modal-overlay.active .cod-modal {
      transform: scale(1) translateY(0);
    }

    .modal-header {
      background: linear-gradient(135deg, var(--accent-color), var(--accent-hover));
      color: var(--pure-white);
      padding: 24px 28px;
      border-radius: 20px 20px 0 0;
      display: flex;
      align-items: center;
      gap: 12px;
      position: relative;
    }

    .modal-header h3 {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 1.4rem;
      font-weight: 700;
      margin: 0;
    }

    .modal-header i {
      font-size: 1.2rem;
    }

    .modal-close {
      position: absolute;
      top: 50%;
      right: 20px;
      transform: translateY(-50%);
      background: rgba(255, 255, 255, 0.2);
      border: none;
      color: var(--pure-white);
      width: 32px;
      height: 32px;
      border-radius: 50%;
      cursor: pointer;
      transition: var(--transition);
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .modal-close:hover {
      background: rgba(255, 255, 255, 0.3);
      transform: translateY(-50%) scale(1.1);
    }

    .modal-body {
      padding: 28px;
    }

    .product-summary {
      background: var(--off-white);
      border-radius: 12px;
      padding: 20px;
      margin-bottom: 24px;
      border: 1px solid var(--border-color);
    }

    .product-summary h4 {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 1.1rem;
      font-weight: 600;
      color: var(--primary-black);
      margin-bottom: 8px;
    }

    .product-details {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
      font-size: 0.9rem;
    }

    .detail-item {
      display: flex;
      justify-content: space-between;
      color: var(--dark-gray);
    }

    .detail-value {
      font-weight: 600;
      color: var(--primary-black);
    }

    .total-price {
      grid-column: 1 / -1;
      font-size: 1.1rem;
      font-weight: 700;
      color: var(--accent-color);
      border-top: 1px solid var(--border-color);
      padding-top: 12px;
      margin-top: 12px;
    }

    .form-group {
      margin-bottom: 20px;
    }

    .form-label {
      display: block;
      font-weight: 600;
      color: var(--primary-black);
      margin-bottom: 8px;
      font-size: 0.9rem;
    }

    .required {
      color: var(--error-color);
    }

    .form-input {
      width: 100%;
      padding: 12px 16px;
      border: 1px solid var(--border-color);
      border-radius: 8px;
      font-size: 0.95rem;
      transition: var(--transition);
      background: var(--pure-white);
      font-family: inherit;
    }

    .form-input:focus {
      outline: none;
      border-color: var(--accent-color);
      box-shadow: 0 0 0 3px rgba(58, 134, 255, 0.1);
    }

    .form-input.error {
      border-color: var(--error-color);
      box-shadow: 0 0 0 3px rgba(255, 71, 87, 0.1);
    }

    .form-textarea {
      resize: vertical;
      min-height: 80px;
    }

    .error-message {
      color: var(--error-color);
      font-size: 0.8rem;
      margin-top: 4px;
      display: none;
    }

    .error-message.show {
      display: block;
    }

    .modal-actions {
      display: flex;
      gap: 12px;
      margin-top: 28px;
    }

    .modal-btn {
      flex: 1;
      padding: 12px 20px;
      border-radius: 8px;
      font-weight: 600;
      font-size: 0.95rem;
      cursor: pointer;
      transition: var(--transition);
      border: 1px solid transparent;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 8px;
    }

    .modal-btn-primary {
      background: var(--accent-color);
      color: var(--pure-white);
    }

    .modal-btn-primary:hover:not(:disabled) {
      background: var(--accent-hover);
      transform: translateY(-1px);
      box-shadow: var(--shadow-light);
    }

    .modal-btn-primary:disabled {
      background: var(--medium-gray);
      cursor: not-allowed;
      transform: none;
    }

    .modal-btn-secondary {
      background: var(--pure-white);
      color: var(--dark-gray);
      border-color: var(--border-color);
    }

    .modal-btn-secondary:hover {
      background: var(--light-gray);
      color: var(--primary-black);
    }

    .loading-spinner {
      width: 18px;
      height: 18px;
      border: 2px solid rgba(255, 255, 255, 0.3);
      border-top: 2px solid var(--pure-white);
      border-radius: 50%;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }

    /* Success Message */
    .success-message {
      background: var(--success-color);
      color: var(--pure-white);
      padding: 16px 20px;
      border-radius: 8px;
      margin-bottom: 20px;
      display: none;
      align-items: center;
      gap: 10px;
      font-weight: 500;
    }

    .success-message.show {
      display: flex;
    }

    /* Empty Cart */
    .cart-empty {
      text-align: center;
      padding: 80px 40px;
      background: var(--pure-white);
      border-radius: var(--border-radius);
      border: 1px solid var(--border-color);
      box-shadow: var(--shadow-light);
      max-width: 500px;
      margin: 0 auto;
    }

    .cart-empty-icon {
      font-size: 3.5rem;
      color: var(--medium-gray);
      margin-bottom: 20px;
      opacity: 0.8;
    }

    .cart-empty-text {
      font-family: 'Space Grotesk', sans-serif;
      font-size: 1.8rem;
      font-weight: 700;
      color: var(--primary-black);
      margin-bottom: 12px;
    }

    .cart-empty p {
      font-size: 1rem;
      color: var(--dark-gray);
      margin-bottom: 28px;
      line-height: 1.6;
    }

    /* Responsive Design */
    @media (max-width: 1024px) {
      .cart-container {
        grid-template-columns: 1fr;
        gap: 32px;
      }
      
      .cart-summary-container {
        position: static;
      }
    }

    @media (max-width: 768px) {
      .container {
        padding: 32px 16px;
      }
      
      .page-title {
        font-size: 1.8rem;
      }
      
      .cart-item {
        grid-template-columns: 80px 1fr;
        gap: 16px;
      }
      
      .item-image {
        width: 80px;
        height: 80px;
      }
      
      .item-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 4px;
      }
      
      .item-meta {
        flex-direction: column;
        align-items: flex-start;
        gap: 12px;
      }
      
      .item-actions {
        width: 100%;
        justify-content: space-between;
      }

      .cod-modal {
        width: 95%;
        margin: 20px;
      }

      .modal-body {
        padding: 20px;
      }

      .product-details {
        grid-template-columns: 1fr;
        gap: 8px;
      }

      .modal-actions {
        flex-direction: column;
      }
    }

    @media (max-width: 480px) {
      .cart-items {
        padding: 16px;
      }
      
      .cart-item {
        grid-template-columns: 1fr;
        text-align: center;
      }
      
      .item-header, .item-meta {
        align-items: center;
        text-align: center;
      }
      
      .item-actions {
        flex-direction: column;
        gap: 8px;
      }
      
      .action-btns {
        width: 100%;
        justify-content: center;
      }
      
      .cart-empty {
        padding: 60px 24px;
      }
      
      .cart-empty-text {
        font-size: 1.5rem;
      }
    }
  </style>
</head>
<body>
{{!-- {{>userHeader}} --}}

  <!-- Cart Page Content -->
  <div class="container">
    <header class="page-header">
      <h1 class="page-title">Your Shopping Cart <span class="cart-count">{{#if products}}({{products.length}} items){{/if}}</span></h1>
      <a href="/" class="btn btn-outline">
        <i class="fas fa-arrow-left"></i> Continue Shopping
      </a>
    </header>
    
    <main class="cart-section">
      {{#if products}}
      <div class="cart-container">
        <div class="cart-items-container">
          <div class="cart-items">
            {{#each products}}
            <div class="cart-item">
              {{#if item.isPopular}}
              <div class="item-badge">
                <i class="fas fa-bolt"></i> Popular
              </div>
              {{/if}}
              <div class="item-image">
                <img src="/images/product/{{item._id}}.jpg" alt="{{item.productName}}">
              </div>
              <div class="item-details">
                <div class="item-header">
                  <h3 class="item-name">{{item.productName}}</h3>
                  <div class="item-price">₹{{item.price}}</div>
                </div>
                <p class="item-category">
                  <i class="fas fa-tag"></i> {{item.relatedTo}}
                </p>
                
                <div class="item-meta">
                  <div class="item-quantity">
                    <span>Qty:</span>
                    <div class="quantity-control">
                      <button class="quantity-btn" onclick="updateQuantity('{{item._id}}', 'decrease')">
                        <i class="fas fa-minus"></i>
                      </button>
                      <input type="text" class="quantity-input" value="{{quantity}}" readonly>
                      <button class="quantity-btn" onclick="updateQuantity('{{item._id}}', 'increase')">
                        <i class="fas fa-plus"></i>
                      </button>
                    </div>
                  </div>
                  
                  <div class="item-actions">
                    <a href="/users/remove-product/{{item._id}}" class="action-btns btn-primary">
                      <i class="fas fa-trash"></i> Remove
                    </a>
                    <button class="action-btns btn-outline" onclick="openCODModal('{{item._id}}', '{{item.productName}}', {{item.price}}, {{quantity}})">
                      <i class="fas fa-money-bill-wave"></i> Buy Now (COD)
                    </button>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
        </div>
        
        <div class="cart-summary-container">
          <div class="cart-summary">
            <h3 class="summary-title">
              <i class="fas fa-receipt"></i> Order Summary
            </h3>
            
            <div class="price-row">
              <span class="price-label">Subtotal ({{products.length}} items)</span>
              <span class="price-value">₹{{total}}</span>
            </div>
            <div class="price-row price-mrp">
              <span class="price-label">Total MRP</span>
              <span class="price-value">₹{{totalMRP}}</span>
            </div>
            <div class="price-row">
              <span class="price-label">Delivery</span>
              <span class="price-value">FREE</span>
            </div>
            <div class="price-row price-saved">
              <span class="price-label">Total Savings</span>
              <span class="price-value">₹{{saved}}</span>
            </div>
            
            <div class="price-row price-total">
              <span class="price-label">Total Amount</span>
              <span class="price-value">₹{{total}}</span>
            </div>
            
            {{!-- <a href="/users/checkout" class="action-btns btn-primary checkout-btns">
              <i class="fas fa-lock"></i> Proceed to Checkout
            </a>
             --}}

              {{!-- <button class="action-btns btn-outline" onclick="openCODModal('{{item._id}}', '{{item.productName}}', {{item.price}}, {{quantity}})">
                      <i class="fas fa-money-bill-wave"></i> Buy Now (COD)
                    </button> --}}

            <div class="payment-methods">
              <div class="payment-method">Visa</div>
              <div class="payment-method">MC</div>
              <div class="payment-method">Amex</div>
              <div class="payment-method">PayPal</div>
              <div class="payment-method">UPI</div>
            </div>
          </div>
        </div>
      </div>
      
      {{else}}
      <!-- Empty Cart Message -->
      <div class="cart-empty">
        <div class="cart-empty-icon">
          <i class="fas fa-shopping-cart"></i>
        </div>
        <h3 class="cart-empty-text">Your cart is empty</h3>
        <p>Looks like you haven't added anything to your cart yet</p>
        <a href="/" class="action-btns btn-primary">
          <i class="fas fa-arrow-left"></i> Continue Shopping
        </a>
      </div>
      {{/if}}
    </main>
  </div>

  <!-- COD Modal -->
  <div class="modal-overlay" id="codModal">
    <div class="cod-modal">
      <div class="modal-header">
        <i class="fas fa-money-bill-wave"></i>
        <h3>Cash on Delivery Order</h3>
        <button class="modal-close" onclick="closeCODModal()">
          <i class="fas fa-times"></i>
        </button>
      </div>
      
      <div class="modal-body">
        <div class="success-message" id="successMessage">
          <i class="fas fa-check-circle"></i>
          <span>Order details prepared successfully! Please confirm via WhatsApp.</span>
        </div>
        
        <div class="product-summary" id="productSummary">
          <h4 id="modalProductName">Product Name</h4>
          <div class="product-details">
            <div class="detail-item">
              <span>Quantity:</span>
              <span class="detail-value" id="modalQuantity">1</span>
            </div>
            <div class="detail-item">
              <span>Unit Price:</span>
              <span class="detail-value" id="modalUnitPrice">₹0</span>
            </div>
            <div class="detail-item total-price">
              <span>Total Amount:</span>
              <span class="detail-value" id="modalTotalPrice">₹0</span>
            </div>
          </div>
        </div>

        <form id="codForm">
          <div class="form-group">
            <label class="form-label" for="customerName">
              Full Name <span class="required">*</span>
            </label>
            <input 
              type="text" 
              id="customerName" 
              class="form-input" 
              placeholder="Enter your full name"
              required
            >
            <div class="error-message" id="nameError">Please enter your full name</div>
          </div>

          <div class="form-group">
            <label class="form-label" for="customerPhone">
              Phone Number <span class="required">*</span>
            </label>
            <input 
              type="tel" 
              id="customerPhone" 
              class="form-input" 
              placeholder="Enter your 10-digit phone number"
              required
            >
            <div class="error-message" id="phoneError">Please enter a valid 10-digit phone number</div>
          </div>

          <div class="form-group">
            <label class="form-label" for="customerAddress">
              Delivery Address <span class="required">*</span>
            </label>
            <textarea 
              id="customerAddress" 
              class="form-input form-textarea" 
              placeholder="Enter your complete delivery address including pincode"
              required
            ></textarea>
            <div class="error-message" id="addressError">Please enter your delivery address</div>
          </div>

          <div class="form-group">
            <label class="form-label" for="customerNotes">
              Special Instructions (Optional)
            </label>
            <textarea 
              id="customerNotes" 
              class="form-input form-textarea" 
              placeholder="Any special delivery instructions or notes"
              style="min-height: 60px;"
            ></textarea>
          </div>
        </form>

        <div class="modal-actions">
          <button type="button" class="modal-btn modal-btn-secondary" onclick="closeCODModal()">
            <i class="fas fa-times"></i> Cancel
          </button>
          <button type="button" class="modal-btn modal-btn-primary" id="confirmOrderBtn" onclick="confirmCODOrder()">
            <i class="fas fa-whatsapp"></i> Confirm Order via WhatsApp
          </button>
        </div>
      </div>
    </div>
  </div>

<script>
let currentOrderData = {};

function updateQuantity(itemId, action) {
  // Add your quantity update logic here
  console.log(`Updating quantity for item ${itemId}: ${action}`);
}

function openCODModal(productId, productName, price, quantity) {
  // Store order data
  currentOrderData = {
    productId,
    productName,
    price,
    quantity,
    total: price * quantity
  };

  // Update modal content
  document.getElementById('modalProductName').textContent = productName;
  document.getElementById('modalQuantity').textContent = quantity;
  document.getElementById('modalUnitPrice').textContent = `₹${price}`;
  document.getElementById('modalTotalPrice').textContent = `₹${currentOrderData.total}`;

  // Reset form
  document.getElementById('codForm').reset();
  clearErrors();
  hideSuccessMessage();

  // Show modal
  document.getElementById('codModal').classList.add('active');
  document.body.style.overflow = 'hidden';
  
  // Focus on first input
  setTimeout(() => {
    document.getElementById('customerName').focus();
  }, 300);
}

function closeCODModal() {
  document.getElementById('codModal').classList.remove('active');
  document.body.style.overflow = 'auto';
  clearErrors();
  hideSuccessMessage();
}

function validateForm() {
  let isValid = true;
  clearErrors();

  // Validate name
  const name = document.getElementById('customerName').value.trim();
  if (!name || name.length < 2) {
    showError('customerName', 'nameError', 'Please enter your full name');
    isValid = false;
  }

  // Validate phone
  const phone = document.getElementById('customerPhone').value.trim();
  const phoneRegex = /^[6-9]\d{9}$/;
  if (!phone || !phoneRegex.test(phone)) {
    showError('customerPhone', 'phoneError', 'Please enter a valid 10-digit phone number');
    isValid = false;
  }

  // Validate address
  const address = document.getElementById('customerAddress').value.trim();
  if (!address || address.length < 10) {
    showError('customerAddress', 'addressError', 'Please enter a complete delivery address');
    isValid = false;
  }

  return isValid;
}

function showError(inputId, errorId, message) {
  const input = document.getElementById(inputId);
  const error = document.getElementById(errorId);
  
  input.classList.add('error');
  error.textContent = message;
  error.classList.add('show');
}

function clearErrors() {
  const inputs = document.querySelectorAll('.form-input');
  const errors = document.querySelectorAll('.error-message');
  
  inputs.forEach(input => input.classList.remove('error'));
  errors.forEach(error => {
    error.classList.remove('show');
    error.textContent = '';
  });
}

function showSuccessMessage() {
  document.getElementById('successMessage').classList.add('show');
}

function hideSuccessMessage() {
  document.getElementById('successMessage').classList.remove('show');
}

function confirmCODOrder() {
  if (!validateForm()) {
    return;
  }

  const confirmBtn = document.getElementById('confirmOrderBtn');
  const originalContent = confirmBtn.innerHTML;
  
  // Show loading state
  confirmBtn.disabled = true;
  confirmBtn.innerHTML = '<div class="loading-spinner"></div> Processing...';

  // Simulate processing delay
  setTimeout(() => {
    // Get form data
    const customerName = document.getElementById('customerName').value.trim();
    const phone = document.getElementById('customerPhone').value.trim();
    const address = document.getElementById('customerAddress').value.trim();
    const notes = document.getElementById('customerNotes').value.trim();

    // Format WhatsApp message
    const message = `*🛒 NEW COD ORDER*%0A%0A` +
                   `*📦 PRODUCT DETAILS*%0A` +
                   `Product: ${currentOrderData.productName}%0A` +
                   `Quantity: ${currentOrderData.quantity}%0A` +
                   `Unit Price: ₹${currentOrderData.price}%0A` +
                   `*Total Price: ₹${currentOrderData.total}*%0A` +
                   `Payment: Cash on Delivery%0A%0A` +
                   `*👤 CUSTOMER DETAILS*%0A` +
                   `Name: ${customerName}%0A` +
                   `Phone: ${phone}%0A` +
                   `Address: ${address}%0A` +
                   (notes ? `Special Instructions: ${notes}%0A` : '') +
                   `%0A*Please confirm this order and provide delivery details.*`;

    // WhatsApp number +91 96452 27014
    const whatsappUrl = `https://wa.me/919645227014?text=${message}`;

    // Reset button
    confirmBtn.disabled = false;
    confirmBtn.innerHTML = originalContent;

    // Show success message
    showSuccessMessage();

    // Hide form and show success state
    document.getElementById('codForm').style.display = 'none';
    document.querySelector('.modal-actions').innerHTML = `
      <button type="button" class="modal-btn modal-btn-secondary" onclick="closeCODModal()">
        <i class="fas fa-times"></i> Close
      </button>
      <button type="button" class="modal-btn modal-btn-primary" onclick="window.open('${whatsappUrl}', '_blank')">
        <i class="fab fa-whatsapp"></i> Open WhatsApp
      </button>
    `;

    // Auto-open WhatsApp after a short delay
    setTimeout(() => {
      window.open(whatsappUrl, '_blank');
    }, 1000);

  }, 1500);
}

// Close modal when clicking outside
document.getElementById('codModal').addEventListener('click', function(e) {
  if (e.target === this) {
    closeCODModal();
  }
});

// Close modal with Escape key
document.addEventListener('keydown', function(e) {
  if (e.key === 'Escape' && document.getElementById('codModal').classList.contains('active')) {
    closeCODModal();
  }
});

// Real-time validation
document.getElementById('customerName').addEventListener('input', function() {
  if (this.classList.contains('error') && this.value.trim().length >= 2) {
    this.classList.remove('error');
    document.getElementById('nameError').classList.remove('show');
  }
});

document.getElementById('customerPhone').addEventListener('input', function() {
  const phoneRegex = /^[6-9]\d{9}$/;
  if (this.classList.contains('error') && phoneRegex.test(this.value.trim())) {
    this.classList.remove('error');
    document.getElementById('phoneError').classList.remove('show');
  }
});

document.getElementById('customerAddress').addEventListener('input', function() {
  if (this.classList.contains('error') && this.value.trim().length >= 10) {
    this.classList.remove('error');
    document.getElementById('addressError').classList.remove('show');
  }
});

// Handle form submission with Enter key
document.getElementById('codForm').addEventListener('keydown', function(e) {
  if (e.key === 'Enter' && e.target.tagName !== 'TEXTAREA') {
    e.preventDefault();
    confirmCODOrder();
  }
});
</script>

